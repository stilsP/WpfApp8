<Window x:Class="WpfApp8.MainWindow_User"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp8"
        mc:Ignorable="d"
        Title="MainWindow_User" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
    <RowDefinition Height="60"></RowDefinition>
    <RowDefinition Height="200*"></RowDefinition>
    <RowDefinition Height="60"></RowDefinition>
</Grid.RowDefinitions>
        <DataGrid Grid.Row="1" x:Name="dataGridOrders" AutoGenerateColumns="False" CanUserAddRows="False" ItemsSource="{Binding Order}">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Code}" Header="Code заказа" />
                <DataGridTextColumn Binding="{Binding Status}" Header="Статус" />
                <DataGridTextColumn Binding="{Binding Date}" Header="Дата" />
                <DataGridTextColumn Binding="{Binding id_Client}" Header="Клиент" />
                <DataGridTextColumn Binding="{Binding ProductArticle}" Header="Артикул продукта" />
                <DataGridTextColumn Binding="{Binding Quantity}" Header="Кол-во товаров" />
            </DataGrid.Columns>
        </DataGrid>
        <Grid Grid.Row="2" Background="#FFCDC1AD">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Button Content="Каталог" Margin="10" Click="CatalogButton_Click" Background="#FF31464F" Foreground="White"/>
                <Button Content="Клиенты" Margin="10" Click="ClientButton_Click" Background="#FF31464F" Foreground="White"/>
           
            </StackPanel>
        </Grid>
    </Grid>
</Window>
