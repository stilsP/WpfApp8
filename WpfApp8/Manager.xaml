<Window x:Class="WpfApp8.Admin.Manager"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp8.Admin"
        mc:Ignorable="d"
        Title="Manager" Height="450" Width="800">
    <Grid Background="#F5F5F5">
        <Grid.RowDefinitions>
            <RowDefinition Height="60"></RowDefinition>
            <RowDefinition Height="200*"></RowDefinition>
            <RowDefinition Height="60"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Background="#FFCDC1AD">
            <StackPanel Orientation="Horizontal" Margin="10">

                <TextBox x:Name="SearchTextBox" Width="200" Margin="5" 
     TextChanged="SearchTextBox_TextChanged"
     Tag="Поиск..." HorizontalAlignment="Center" Background="#FFF7F3E6"/>
                <ComboBox x:Name="SortComboBox" SelectionChanged="SortComboBox_SelectionChanged" IsSynchronizedWithCurrentItem="False" Width="115" HorizontalAlignment="Right">
                    <ComboBox.Background>
                        <LinearGradientBrush EndPoint="0,1">
                            <GradientStop Color="#FFF0F0F0"/>
                            <GradientStop Color="#FFF7F3E6" Offset="1"/>
                        </LinearGradientBrush>
                    </ComboBox.Background>

                    <ComboBoxItem Tag="Name" Content="По Имени"/>
                    <ComboBoxItem Tag="Surname" Content="По Фамилии"/>
                    <ComboBoxItem Tag="Patronymic" Content="По Отчеству"/>
                    <ComboBoxItem Tag="id_role" Content="По Роли"/>
                    <ComboBoxItem Tag="Adress" Content="По Адресу"/>
                    <ComboBoxItem Tag="Phone" Content="По номеру"/>
                    

                </ComboBox>
            </StackPanel>
        </Grid>
        <Grid Grid.Row="1">
            <ListView Name="LViewUsers" Background="#FFCDC1AD">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Id" DisplayMemberBinding="{Binding id}"/>
                        <GridViewColumn Header="Имя" DisplayMemberBinding="{Binding Name}"/>
                        <GridViewColumn Header="Фамилия" DisplayMemberBinding="{Binding Surname}"/>
                        <GridViewColumn Header="Отчество" DisplayMemberBinding="{Binding Patronymic}"/>
                        <GridViewColumn Header="Дата рождения" DisplayMemberBinding="{Binding BirthDate}"/>
                        <GridViewColumn Header="Логин" DisplayMemberBinding="{Binding Login}"/>
                        <GridViewColumn Header="Пароль" DisplayMemberBinding="{Binding Password}"/>
                        <GridViewColumn Header="Номер" DisplayMemberBinding="{Binding Phone}"/>
                        <GridViewColumn Header="Адрес" DisplayMemberBinding="{Binding Adress}"/>
                        <GridViewColumn Header="Роль" DisplayMemberBinding="{Binding id_Role}"/>

                    </GridView>
                </ListView.View>
            </ListView>
        </Grid>
        <Grid Grid.Row="2" Background="#FFCDC1AD">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Button x:Name="AddButton" Content="Добавить" Margin="10" Click="AddButton_Click" Background="#FF31464F" Foreground="White"/>
                <Button x:Name="EditButton" Content="Редактировать" Margin="10" Click="EditButton_Click" IsEnabled="False" Background="#FF31464F"/>
                <Button x:Name="DeleteButton" Content="Удалить" Margin="10" Click="DeleteButton_Click" IsEnabled="False" Background="#FF31464F"/>
                <Button Content="Каталог" 
                Margin="10" 
                Click="MainButton_Click" 
                Background="#FF31464F" 
                Foreground="White" 
                Width="auto">
                </Button>

            </StackPanel>
        </Grid>
    </Grid>
</Window>
